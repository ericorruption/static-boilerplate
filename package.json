{
  "name": "static-boilerplate",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "repository": "ericorruption/static-boilerplate",
  "scripts": {
    "prehtml": "htmlhint src",
    "precss": "stylelint \"src/scss/**/*.scss\"",
    "prejs": "eslint --ext .ts src",
    "lint": "npm run prehtml && npm run precss && npm run prejs",
    "serve": "npx browser-sync start --server dist --files 'dist'",
    "prebuild": "npx rimraf dist",
    "build": "parcel build src/index.html",
    "postbuild": "npx cpy-cli src/icons/favicon.ico dist",
    "start": "parcel src/index.html"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@types/google.analytics": "0.0.40",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "colorguard": "1.2.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "htmlhint": "^0.11.0",
    "husky": "^3.0.9",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-imagemin": "^3.0.0",
    "sass": "^1.23.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "typescript": "^3.6.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}
